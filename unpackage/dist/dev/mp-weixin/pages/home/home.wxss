
.banner {
  /* 添加一些边距 */
  margin: 20rpx;
}
.swiper-image {
  /* 让图片占满整个swiper区域 */
  width: 100%;
  height: 100%;
}
.func1 {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 20rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1); /* 添加阴影 */
}
.func1_item {
  width: calc(25% - 20rpx); /* 减去边距 */
  margin-bottom: 20rpx; /* 添加底部边距 */
  border-radius: 16rpx; /* 添加圆角 */
  background-color: #f5f5f5;
  padding: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1); /* 添加内部阴影 */
}
.func1_img {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}
.func1_text {
  font-size: 28rpx;
  color: #333333;
  text-align: center;
}
.spacing {
  height: 20rpx; /* 根据需要调整间距大小 */
  background-color: transparent; /* 您可以设置背景颜色，或者保持透明 */
}
